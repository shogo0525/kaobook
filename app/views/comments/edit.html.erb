<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
		<h1>コメント編集</h1>
		  <%= form_for(@comment, url: topic_comment_path(@comment.topic, @comment)) do |f| %>
		    <%= f.text_area :content, class: "form-control", placeholder: 'コメントを入力' %>
		    <br>
		    <%= f.submit 'コメントを送信', class: 'btn btn-sm btn-primary' %>
		<% end %>
	</div>
</div>