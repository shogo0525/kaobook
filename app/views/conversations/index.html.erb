
<div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <table class="table table-hover">
    <thead>
      <h2>メッセージ一覧</h2>
    </thead>
    <% @conversations.each do |conversation| %>
      <tbody>
        <td>
        	<% target = conversation.target_user(current_user) %>
          <% if target.present? %>
            <%= profile_img(target) %>
            <%= link_to target.name, conversation_messages_path(conversation)%>
          <% end %> 
        </td>
      </tbody>
    <% end %>
  </table>
</div>


<% if false %>
<h1>メッセンジャー</h1>

<% @friend_users.each do |friend_user| %>
<% if friend_user.present? %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@conversation, url: conversations_path) do |f| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= friend_user.name %>
          <%# profile_img(friend_user) %>
          <%= f.hidden_field :recipient_id, value: friend_user.id %>
          <%= f.submit 'メッセージを始める', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<% end %>
<% end %>