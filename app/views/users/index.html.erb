<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
	  <table class="table table-hover">
      <thead>
        <h2>ユーザー一覧</h2>
      </thead>
		  <% @users.each do |user| %>
	  		<% unless current_user.id == user.id %>
		  		<tbody>
	          <td>
			        <%= profile_img(user) %>
			        <%= user.name %>
			        <% if user.following?(current_user) %>
			        	<br>（フォローされています）
			        <% end %>
			        <br>
			        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-large btn-success"%>
			        <%= render 'follow_form', user: user %>
			        <br>
			      </td>
			    </tbody>
	      <% end %>
		  <% end %>
	  </table>
  </div>
</div>