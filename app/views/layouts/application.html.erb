<!DOCTYPE html>
<html>
<head>
  <title>Kaobook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<header>
	<%= link_to image_tag('kaobook.png', { :border => '0', :alt => '新規登録', :width => "200"}), root_path %>


	<% if user_signed_in? %>
		<ul>
			<li><%= link_to 'マイページ', edit_user_registration_path %></li>
		  <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
			<li><%= link_to 'ユーザー一覧', users_path %></li>
			<li><%= link_to "メッセージ", conversations_path %></li>
		</ul>
	<% else %>
		<% if false %>
	  <li><%= link_to 'ログイン', new_user_session_path  %></li>
	  <li><%= link_to 'サインアップ', new_user_registration_path %></li>
	  <% end %>
	<% end %>
</header>

<%= yield %>

</body>
</html>
