<div>

	<%= form_for(@topic) do |f| %>
		<%= f.text_field :content %>
		<br>
		<%= f.submit %>
	<% end %>

	<% @topics.each do |topic| %>
		<div class="row">
			<h2><%= topic.created_at %></h2>
			<p><%= topic.content %></p>
      <%= link_to "編集", edit_topic_path(topic.id) %>
      <%= link_to "詳細", topic_path(topic) %>
		</div>
	<% end %>

</div>